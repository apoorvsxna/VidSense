{
  "manifest_version": 3,
  "name": "VidSense",
  "version": "1.0.1",
  "description": "AI-powered answers for YouTube videos in the current tab.",
  "icons": {
    "48": "eye-black.png",
    "128": "eye-black.png"
  },
  "action": {
    "default_icon": "eye-black.png",
    "default_title": "VidSense",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "https://vidsense.onrender.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}